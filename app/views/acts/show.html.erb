<%- model_class = Act -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @act.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @act.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duedate) %>:</strong></dt>
  <dd><%= @act.duedate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @act.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @act.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:severity) %>:</strong></dt>
  <dd><%= @act.severity %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              acts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_act_path(@act), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              act_path(@act),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
